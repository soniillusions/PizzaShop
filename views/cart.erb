<html>
    <head>
        <title>Pizza Shop - Cart</title>
    </head>
    <body>

    <table class="table">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Qty</th>
      </tr>
      </thead>
      <tbody>
      <% total_price = 0 %>
      <% total_qty = 0 %>
      <% @items.each_with_index do |item, i| %>
          <tr>
            <th scope="row"><%= i + 1 %></th>
            <td><%= item[0].title %></td>
            <td><%= item[0].price %></td>
            <td><%= item[1] %></td>
          </tr>
      <% total_price += item[0].price * item[1].to_i %>
      <% total_qty += item[1].to_i%>
      <% end %>
          <tr>
            <th></th>
            <td></td>
            <td>Total: <%= total_price %></td>
            <td><%= total_qty %></td>
          </tr>
      </tbody>
    </table>
    
